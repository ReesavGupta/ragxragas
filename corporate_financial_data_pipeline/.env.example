# .env.example for Corporate Financial Data RAG Pipeline

# Pinecone (Vector DB)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=your-pinecone-index-name

# Nomic (Embeddings)
NOMIC_API_KEY=your-nomic-api-key

# GROQ (LLM)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=mixtral-8x7b-32768  # or another supported model

# Redis (Cache & RQ)
REDIS_URL=redis://localhost:6379/0

# Data versioning (for cache keys)
DATA_VERSION=v1

# API Keys (comma-separated, for API access)
API_KEYS=test-key,another-key

# (Optional) Data directory for PDF ingestion
DATA_DIR=data

# (Optional) API URL for Streamlit UI
API_URL=http://localhost:8000/query 